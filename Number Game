import java.util.Random;
import java.util.Scanner;

public class NumberGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random rand = new Random();
        int totalScore = 0;
        int round = 1;
        String playAgain;

        System.out.println("ğŸ² Welcome to the Number Guessing Game!");

        do {
            int numberToGuess = rand.nextInt(100) + 1;
            int maxAttempts = 7;
            int attempts = 0;
            boolean guessedCorrectly = false;

            System.out.println("\nğŸ” Round " + round + ": Guess the number between 1 and 100. You have " + maxAttempts + " attempts!");

            while (attempts < maxAttempts) {
                System.out.print("Attempt " + (attempts + 1) + ": Enter your guess: ");
                int guess = scanner.nextInt();
                attempts++;

                if (guess < numberToGuess) {
                    System.out.println("ğŸ”» Too low!");
                } else if (guess > numberToGuess) {
                    System.out.println("ğŸ”º Too high!");
                } else {
                    System.out.println("âœ… Correct! You guessed the number in " + attempts + " attempts.");
                    totalScore++;
                    guessedCorrectly = true;
                    break;
                }
            }

            if (!guessedCorrectly) {
                System.out.println("âŒ Out of attempts! The number was: " + numberToGuess);
            }

            System.out.print("Do you want to play another round? (y/n): ");
            playAgain = scanner.next();
            round++;

        } while (playAgain.equalsIgnoreCase("y"));

        System.out.println("\nğŸ Game over! You won " + totalScore + " round(s). Thanks for playing!");
        scanner.close();
    }
}
